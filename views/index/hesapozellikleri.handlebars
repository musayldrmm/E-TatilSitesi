<div class="container rounded bg-white mt-5 mb-5">
   <div class="row">
      <div class="col-md-3 border-right">
         <div class="d-flex flex-column align-items-center text-center p-3 py-5"><img class="rounded-circle mt-5" width="150px" src="{{account.avatar}}"><span class="font-weight-bold">{{account.name}} {{account.surname}}</span><span class="text-black-50">{{account.email}}</span><span> </span></div>
       <form action="/profilesetting/userimageupdate/{{account._id}}?_method=PUT" method="POST" enctype="multipart/form-data">
       <div class="form-group row ml-4 mt-3">
                  <label for="exampleFormControlFile1">Profil fotoğrafı değiştiriniz.</label>
                  <input type="file" class="form-control-file" name="image">
               </div>
                              <div class="mt-5 text-center"><button class="btn btn-primary profile-button" type="submit">Save Profile</button></div>

       </form>
      </div>
      <div class="col-md-9 border-right">
         <form action="/profilesetting/userdetailupdate/{{account._id}}?_method=PUT" method="POST" >
         <input type="hidden" name="_method" value="PUT">
            <div class="p-3 py-5">
               <div class="d-flex justify-content-between align-items-center mb-3">
                  <h4 class="text-right">Profile Settings</h4>
               </div>
               <div class="row mt-2">
                  <div class="col-md-6"><label class="labels">Name</label><input  name="name" type="text" class="form-control" value={{account.name}}></div>
                  <div class="col-md-6"><label class="labels">Surname</label><input name="surname" type="text" class="form-control" value={{account.surname}}></div>
               </div>
               <div class="row mt-3">
                  <div class="col-md-12"><label class="labels">Mobile Number</label><input name="mobilenumber" type="text" class="form-control" value={{account.mobilenumber}}></div>
                  <div class="col-md-12"><label class="labels">Address Line 1</label><input name="addresline" type="text" class="form-control"  value={{account.addresline}}></div>
                  <div class="col-md-12"><label class="labels">State</label><input name="Country" type="text" class="form-control"  value={{account.Country}}></div>
                  <div class="col-md-12"><label class="labels">Area</label><input type="text"  name="City" class="form-control"  value={{account.City}}></div>
               </div>
               <div class="row mt-3">
                  <div class="col-md-6"><label class="labels">Country</label><input type="text" name="district" class="form-control"  value={{account.district}}></div>
               </div>
               <div class="mt-5 text-center"><button class="btn btn-primary profile-button" type="submit">Save Profile</button></div>
            </div>
         </form>
      </div>
   </div>


</div>
{{/if}}
