{{#unless göster}}
   <div class="container">
    <div class="row">
        <div class="col-md-12">
            <div class="error-template">
                <h1>
                    Oops!</h1>
                <h2>
                    404 Not Found</h2>
                <div class="error-details">
                   Sorry, an error has occurred, log out to access the requested page.
                </div>
                <div class="error-actions">
                    <a href="/" class="btn btn-primary btn-lg"><span class="glyphicon glyphicon-home"></span>
                        Take Me Home </a><a href="/contact" class="btn btn-default btn-lg"><span class="glyphicon glyphicon-envelope"></span> Contact Support </a>
                </div>
            </div>
        </div>
    </div>
</div>
   {{/unless}}
{{#if göster}}
<div class="signup-form">
  <form action="/tour" enctype="multipart/form-data" method="POST">
    <h2>Create Tour</h2>
    <p>Please fill in this form to create an tour!</p>
    <hr/>
    <div class="form-group">
    <p>Tur ismi için buraya kısa bir yazı bırakınız</p>
      <input class="form-control" type="text" name="tourname" placeholder="tourname" required="required"/>
    </div>
     <div class="form-group">
       <p>Tur Özeti için buraya kısa bir yazı bırakınız</p>
      <textarea class="form-control" type="text" name="tourshortdesc" placeholder="tur özeti" required="required"/>
      </textarea>
    </div>
     <div class="form-group">
      <p>Detaylı tur tanıtımı için buraya bir yazı bırakınız</p>
      <textarea class="form-control" type="text" name="tourdesc" placeholder="Detaylı tur açıklaması" required="required"/>
    </textarea>

    </div>
     <div class="form-group">
      <input class="form-control" type="text" name="tourprice" placeholder="Tur fiyatını giriniz" required="required"/>
    </div>
    <div class="form-group">
    <label for="exampleFormControlFile1">Tur tanıtımı için lütfen maksimum 3 fotoğraf giriniz.</label>
    <input type="file" class="form-control-file" multiple="multiple" name="multiple_image"id="exampleFormControlFile1">
  </div>
    <div class="form-group">
      <button class="btn btn-primary btn-lg" type="submit">Tur oluştur</button>
    </div>
  </form>
  
</div>
{{/if}}